{
  "automock": true,
  "timers": "fake",
  "setupFiles": ["<rootDir>/.config/setupTests.ts"],
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "roots": ["<rootDir>/src"],
  "coverageReporters": ["json", "text-summary", "lcov"],
  "coverageThreshold": {
    "global": {
      "statements": 75,
      "branches": 75,
      "functions": 75,
      "lines": 75
    }
  },
  "unmockedModulePathPatterns": ["intellij"],
  "moduleNameMapper": {
    "\\.module\\.css$": "identity-obj-proxy"
  },
  "transform": {
    "\\.tsx?$": "babel-jest"
  }
}
