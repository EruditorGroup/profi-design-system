{
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "includeMergedTags": true,
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com/profiru",
      "allowBranch": ["release/*", "master"],
      "ignoreChanges": ["*.md"]
    }
  }
}
